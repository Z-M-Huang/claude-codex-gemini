{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Plan Review Result",
  "type": "object",
  "required": ["status", "needs_clarification", "clarification_questions", "summary", "requirements_coverage", "findings", "reviewed_by", "reviewed_at"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["approved", "needs_changes", "needs_clarification", "rejected"],
      "description": "Overall plan review decision"
    },
    "needs_clarification": {
      "type": "boolean",
      "default": false,
      "description": "If true, pauses autonomous pipeline to ask user for clarification on ambiguous requirements"
    },
    "clarification_questions": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Questions to ask user when needs_clarification is true"
    },
    "summary": {
      "type": "string",
      "description": "Brief overall assessment of the plan"
    },
    "requirements_coverage": {
      "type": "object",
      "description": "Maps each acceptance criterion from user-story.json to plan steps that address it",
      "required": ["mapping", "missing"],
      "properties": {
        "mapping": {
          "type": "array",
          "description": "Array of AC-to-steps mappings",
          "items": {
            "type": "object",
            "required": ["ac_id", "steps"],
            "properties": {
              "ac_id": {
                "type": "string",
                "description": "Acceptance criterion ID (e.g., 'AC1')"
              },
              "steps": {
                "type": "array",
                "items": { "type": "string" },
                "description": "Plan step(s) that address this AC"
              }
            },
            "additionalProperties": false
          }
        },
        "missing": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of AC IDs not covered by the plan"
        }
      },
      "additionalProperties": false
    },
    "scores": {
      "type": "object",
      "description": "Optional numeric scores for different aspects",
      "required": ["requirements_coverage", "architecture", "security", "testability", "feasibility", "overall"],
      "properties": {
        "requirements_coverage": { "type": "number" },
        "architecture": { "type": "number" },
        "security": { "type": "number" },
        "testability": { "type": "number" },
        "feasibility": { "type": "number" },
        "overall": { "type": "number" }
      },
      "additionalProperties": false
    },
    "findings": {
      "type": "array",
      "description": "Structured findings with detailed fields",
      "items": {
        "type": "object",
        "required": ["id", "category", "severity", "title", "description", "recommendation", "location", "effort"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique finding ID (e.g., 'F1')"
          },
          "category": {
            "type": "string",
            "enum": ["requirements", "security", "architecture", "quality", "feasibility"],
            "description": "Which aspect of the plan this finding relates to"
          },
          "severity": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low", "info"],
            "description": "How serious the finding is"
          },
          "title": {
            "type": "string",
            "description": "Short summary of the finding"
          },
          "description": {
            "type": "string",
            "description": "Detailed explanation of the finding"
          },
          "location": {
            "type": "string",
            "description": "Where in the plan this applies (e.g., 'plan.steps[2]')"
          },
          "recommendation": {
            "type": "string",
            "description": "How to address this finding"
          },
          "effort": {
            "type": "string",
            "enum": ["trivial", "minor", "moderate", "major"],
            "description": "Estimated effort to fix"
          }
        },
        "additionalProperties": false
      }
    },
    "blockers": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Critical issues that must be fixed before approval"
    },
    "recommendations": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Suggested improvements"
    },
    "approval_conditions": {
      "type": "array",
      "items": { "type": "string" },
      "description": "What must be done to get approval (if status is needs_changes)"
    },
    "reviewed_by": {
      "type": "string",
      "enum": ["plan-reviewer", "codex-reviewer"],
      "description": "Agent that performed the review"
    },
    "reviewed_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO8601 timestamp of when review was completed"
    }
  },
  "additionalProperties": false
}
